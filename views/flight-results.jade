extends layout

block content
  h1 Passagens Encontradas
  if !flightTickets.length
    div Nenhuma passagem encontrada para os crit√©rios informados :(
  else
    ul
      each flightTicket in flightTickets
        li
          div De: #{flightTicket.from}
          div Para: #{flightTicket.to}
          div Ida: #{flightTicket.departureDate}
          div Volta: #{flightTicket.returnDate}
          div Valor: R$#{flightTicket.price}
